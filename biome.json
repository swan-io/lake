{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.tsx"]
  },
  "formatter": {
    "enabled": false
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useSemanticElements": "off",
        "useValidAriaRole": "off",

        "useAltText": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noVoidTypeReturn": "off",

        "useExhaustiveDependencies": "off",
        "useJsxKeyInIterable": "off",
        "noUnnecessaryContinue": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "style": {
        "noUselessElse": "off",
        "useImportType": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noMisleadingCharacterClass": "off",
        "noShadowRestrictedNames": "off",

        "noArrayIndexKey": "off",
        "noDoubleEquals": "off",
        "noGlobalIsNan": "off",
        "noAssignInExpressions": "off",
        "noExplicitAny": "off"
      }
    }
  }
}
